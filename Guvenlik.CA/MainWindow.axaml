<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Guvenlik.CA.MainWindow"
        Title="IZU - Certificate Authority (CA)"
        Width="500" Height="400">
    
    <StackPanel Margin="20">
        <TextBlock Text="Sertifika Otoritesi (CA)" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <Button Name="btnBaslat" Content="Server'ı Başlat (Port 5050)" 
                HorizontalAlignment="Stretch" Margin="0,0,0,10" 
                Click="BtnBaslat_Click"/>

        <TextBlock Text="Sistem Logları:" Margin="0,10,0,5"/>
        <TextBox Name="txtLog" Height="250" AcceptsReturn="True" IsReadOnly="True" 
                 TextWrapping="Wrap" />
    </StackPanel>
</Window>